<% @company.credit_requests.each do |request| %>
  <table>
    <tr>
      <td>
        <strong> Solicitação: </strong>
      </td>
      <td>
        <%= link_to request.id, credit_request_path(request) %>
      </td>
    </tr>
    <tr>
      <td>
        <strong> Valor: </strong>
      </td>
      <td>
        <%= request.amount %>
      </td>
    </tr>
  </table>
<% end %>
