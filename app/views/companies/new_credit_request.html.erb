<%= form_with model: @request do |f| %>
  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.label :periods %>
  <%= f.select :periods, options_for_select(available_periods) %>

  <%= f.label :monthly_fee %>
  <%= f.text_field :monthly_fee, value: "15%", disabled: true %>

  <%= f.hidden_field :company_id, value: @company.id %>

  <%= f.submit %>
<% end %>
