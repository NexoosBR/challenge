<%= form_with model: @request do |f| %>
  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.label :periods %>
  <%= f.select :periods, options_for_select(available_periods),{}, { onchange: "changeFeeValue()", id: 'period'}%>

  <%= f.label :monthly_fee %>
  <%= f.text_field :monthly_fee, value: "15%", disabled: true, id: 'monthly_fee'%>

  <%= f.hidden_field :company_id, value: @company.id %>

  <%= f.submit %>
<% end %>

<%= javascript_tag do %>
  //$('#monthly_fee').val('bunda')
  //changeFeeValue();

  function changeFeeValue() {
    let period = $('#period').val();
    alert(period);
  }
<% end %>
