<div class="company-data">
  <div class="company-title">
    <h2> Empresa: <%= @company.name %> </h2>
    <p> Cnpj: <%= @company.cnpj %> </p>
  </div>

  <div class="company-addresses">
    <h4>Endereços</h4>
    <%= show_addresses(@company) %>
    <div class="create-element-button">
      <%= link_to 'Adicionar endereço', new_address_company_path(@company), class: 'btn btn-primary'%>
    </div>
  </div>

  <div class="company-phones">
    <h4>Telefones</h4>
    <%= show_phones(@company) %>
    <div class="create-element-button">
      <%= link_to 'Adicionar telefone', new_phone_company_path(@company), class: 'btn btn-primary'%>
    </div>
  </div>

  <div class="company-credit-requests">
    <h4>Solicitações de crédito</h4>
    <%= show_company_requests(@company) %>
    <div class="create-element-button">
      <%= link_to 'Criar nova solicitação de crédito', new_credit_request_company_path(@company), class: 'btn btn-primary'%>
    </div>
  </div>
</div>
