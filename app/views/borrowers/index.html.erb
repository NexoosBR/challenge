<header>
  <div class="header-xxlarge-wrap ">
    <div><h1>Solicitantes</h1></div>
    <div><%= link_to 'Novo Solicitante', new_borrower_path, class: 'button' %></div>
  </div>
</header>
<main>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Documento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowers.each do |borrower| %>
      <tr>
        <td><%= borrower.company_name %></td>
        <td><%= borrower.company_number %></td>
        <td><%= link_to 'Mostrar', borrower %></td>
        <td><%= link_to 'Editar', edit_borrower_path(borrower) %></td>
        <td><%= link_to 'Remover', borrower, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</main>