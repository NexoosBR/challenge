<%= form_with(model: borrower, local: true) do |form| %>
  <% if borrower.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(borrower.errors.count, "error") %> prohibited this borrower from being saved:</h2>

      <ul>
      <% borrower.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company_name %>
    <%= form.text_field :company_name %>
  </div>

  <div class="field">
    <%= form.label :company_number %>
    <%= form.text_field :company_number %>
  </div>

  <div class="field">
    <%= form.label :company_phone %>
    <%= form.text_field :company_phone %>
  </div>

  <div class="field">
    <%= form.label :owner_phone %>
    <%= form.text_field :owner_phone %>
  </div>
  
  <%= form.fields_for :addresses do |addresses_form| %>
  <fieldset>
      <div class="field">
        <%= addresses_form.label :kind %>
        <%= addresses_form.select :kind, Address.kinds.map{ |key, value| [key, key] } %>
      </div>
      <div class="field">
        <%= addresses_form.label :address %>
        <%= addresses_form.text_field :address %>
      </div>

      <div class="field">
        <%= addresses_form.label :neighborhood %>
        <%= addresses_form.text_field :neighborhood %>
      </div>

      <div class="field">
        <%= addresses_form.label :city %>
        <%= addresses_form.text_field :city %>
      </div>

      <div class="field">
        <%= addresses_form.label :fed_unit %>
        <%= addresses_form.select :fed_unit, Address.fed_units.map{ |key, value| [key, key] } %>
      </div>

      <div class="field">
        <%= addresses_form.label :zipcode %>
        <%= addresses_form.text_field :zipcode %>
      </div>
  </fieldset>
  <% end %>

  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
