<%= form_for [@company_profile, @proposal] do |form| %>
  <div class="form-group">
    <%= form.label :value %>
    <%= form.number_field :value, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :installments %>
    <%= form.number_field :installments, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :expiration %>
    <%= form.date_field :expiration, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Enviar', class: 'form-control' %>
  </div>
<% end %>